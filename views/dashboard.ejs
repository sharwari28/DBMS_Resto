<link rel="stylesheet" href="/css/dashboard.css">
<center>
  <h2><b>Dashboard </b></h2>
</center>
<div class="main-container">

  <div class="col-md-8 profile-p">
    <div class="card mb-3">
      <div class="card-body">
        <div class="row">
          <div class="col-sm-4">
            <h6 class="mb-0">Name</h6>
          </div>
          <div class="col-sm-8 text-secondary">
            <%= restaurant[0].name %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-4">
            <h6 class="mb-0">Type</h6>
          </div>
          <div class="col-sm-8 text-secondary">
            <%= restaurant[0].type %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-4">
            <h6 class="mb-0">Description</h6>
          </div>
          <div class="col-sm-8 text-secondary">
            <%= restaurant[0].description %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-4">
            <h6 class="mb-0">Address</h6>
          </div>
          <div class="col-sm-8 text-secondary">
            <%= restaurant[0].address %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-sm-4">
            <h6 class="mb-0">Modified</h6>
          </div>
          <div class="col-sm-8 text-secondary">
            <% date=restaurant[0].updatedAt %>
              <%= date.toString().slice(0,25) %>
          </div>
        </div>
        <hr>
        <div class="row">
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Edit
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-8 profile-p">
    <center><h5>My details</h5></center>
    <div class="card mb-3">
      <div class="card-body">
        <div class="row">
          <div class="col-sm-4">
            <h6 class="mb-0">Name</h6>
          </div>
          <div class="col-sm-8 text-secondary">
            <%= user.name %>
          </div>     
      </div>
      <hr>
      <div class="row">
        <div class="col-sm-4">
          <h6 class="mb-0">Email</h6>
        </div>
        <div class="col-sm-8 text-secondary">
          <%= user.email %>
        </div>     
    </div>
    <hr>
    <div class="row">
      <div class="col-sm-4">
        <h6 class="mb-0">Username</h6>
      </div>
      <div class="col-sm-8 text-secondary">
        <%= user.username %>
      </div>     
  </div>
    </div>
  </div>
</div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Restaurant</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/edit/<%=restaurant[0]._id%>" method="post">
          <div class="modal-body">
            <div class="mb-3">
              <input class="form-control" type="text" name="name" placeholder="Name" value="<%= restaurant[0].name %>"
                required>
            </div>
            <div class="mb-3">
              <input class="form-control" type="text" name="type" placeholder="Type" value="<%= restaurant[0].type%>"
                required>
            </div>
            <div class="mb-3">
              <input class="form-control" type="text" name="description" placeholder="Description"
                value="<%= restaurant[0].description %>" required>
            </div>
            <div class="mb-3">
              <input class="form-control" type="text" name="address" placeholder="Address"
                value="<%= restaurant[0].address %>" required>
            </div>
            <div class="mb-3">
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
      </div>
    </div>
  </div>